{
  "name": "abdibaker/slim4-skeleton",
  "description": "Slim 4 Skeleton",
  "license": "proprietary",
  "authors": [
    {
      "name": "Abdillah Bakari",
      "email": "abdibaker1@gmail.com",
      "homepage": "https://github.com/abdibaker"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "doctrine/dbal": "^3.6",
    "pimple/pimple": "^3.2",
    "slim/psr7": "^1.4.0",
    "slim/slim": "^4.5",
    "vlucas/phpdotenv": "^5.1"
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "start": "php -S 127.0.0.1:8080 -t public public/index.php",
    "up": "docker compose up -d --build",
    "down": "docker compose down"
  }
}
